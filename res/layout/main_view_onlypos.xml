<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res/fede.geotagger"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color"
    
    >
<fede.geotagger.GpsReadyIndicator android:id="@+id/GpsReadyElemEditor" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
 <View        android:layout_height="2dip" android:layout_width="fill_parent" android:background="#FF909090" android:paddingTop="5dip"/>
<TextView android:textSize="18dip" android:gravity="center_horizontal" android:paddingTop="20dip" android:paddingBottom="10dip" android:text="@string/position_message" android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/text_color"></TextView>

 <View        android:layout_height="2dip" android:layout_width="fill_parent" android:background="#FF909090" android:paddingTop="5dip"/>

<fede.geotagger.PositionListElem android:id="@+id/OnlyPosChoosenPositionElem" android:layout_width="fill_parent" android:layout_height="wrap_content" app:textColor="@color/text_color"/>

<View        android:layout_height="2dip" android:layout_width="fill_parent" android:background="#FF909090"/>


<Button android:text="@string/add_new_position_name" android:id="@+id/AddNewPositionButton" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="15dip" android:layout_marginBottom="15dip" ></Button>



<View android:layout_height="2dip" android:layout_width="fill_parent" android:background="#FF909090" />


	
	

</LinearLayout>

