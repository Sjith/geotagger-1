<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

<TextView android:text="@string/from_name" android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
<EditText  android:id="@+id/FromEditText" android:layout_width="wrap_content" android:layout_height="wrap_content">
</EditText><TextView android:text="@string/to_name" android:id="@+id/TextView02" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
<EditText android:id="@+id/EditText02" android:layout_width="wrap_content" android:layout_height="wrap_content"></EditText>



<LinearLayout android:id="@+id/LinearLayout01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
<Button android:text="@string/choose_position_name" android:id="@+id/GetPositionButton" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button><Button android:text="@string/add_new_position_name" android:id="@+id/AddNewPositionButton" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
</LinearLayout><TextView android:id="@+id/ChoosenPosition" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>

</LinearLayout>
